%% to use lstinline in \item
%% http://qiita.com/yyu/items/a46cff90ec43d6ea4a97

\makeatletter
\let\orig@item\item

\def\item{%
  \@ifnextchar{<}%
              {\lstinline@item}%
              {\orig@item}%
}

\begingroup
\catcode`\>=\active
\gdef\lstinline@item<{%
  \setbox0\hbox\bgroup
  \catcode`\>=\active
  \let>\lstinline@item@end
}
\endgroup

\def\lstinline@item@end{%
  \egroup
  \orig@item[\box0 ]%
}
\makeatother


